

<body>

<div class="jumbotron text-center">
	<h1>List All Coffeemates</h1>
	
	<p>{{ message }}</p>
    <td><img src="./images/99.jpg"></td>
  <div ng-controller="coffeematesController as list">
	<table align="center" valign="middle">
	  <tbody ng-repeat="coffeemate in coffeemates | orderBy:'-upvotes'">
        <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >
        	<td>
            <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(coffeemate._id)"></span>
              {{coffeemate.upvotes}}
             </td>
             <td> 
             <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{coffeemate.name}}</span>
         	</td>
             <td>
            <span class="glyphicon glyphicon-euro"></span> 
            {{coffeemate.amount}}  
    		</td>
 			<td>
      
      <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>

      
      <button type="button" class="btn btn-default" ng-click="delete(coffeemate._id)">
          <span class="glyphicon glyphicon-remove"></span> Remove 
        </button>
        <button type="button" class="btn btn-default" ng-click="update(coffeemate)">
          <span class="glyphicon glyphicon-edit"></span> Edit 
        </button>
        </span>    
             </td>
    	</tr>
      </tbody>
    </table> 
  </div>
</div>